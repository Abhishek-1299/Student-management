<div class="col-lg-8">
	<p><%= notice %></p>
	<h1>Students List</h1>
	<%= link_to 'New Student', new_student_path, class: "btn btn-primary btn-lg" %>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>First_Name</th>
				<th>Last_Name</th>
				<th>Email</th>
				<th colspan="3">Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @students.each do |student| %>
				<tr>
					<td><%= student.first_name %></td>
					<td><%= student.last_name %></td>
					<td><%= student.email %></td>
					<td><%= link_to 'View', student %></td>
					<td><%= link_to 'Edit', edit_student_path(student) %></td>
					<td><%= link_to 'Delete', student, data: { "turbo-method": :delete } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>  
</div>