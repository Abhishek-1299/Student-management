<p><%= notice %></p>
<h1>blog details</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Content</th>
			<th colspan="3">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @blogs.each do |blog| %>
			<tr>
				<td><%= blog.title %></td>
				<td><%= blog.content %></td>
				<td><%= link_to 'View', blog %></td>
				<td><%= link_to 'Edit', edit_blog_path(blog) %></td>
				<td><%= link_to 'Delete', blog, data: { "turbo-method": :delete } %></td>
			</tr>
		<% end %>
	</tbody>
</table>  